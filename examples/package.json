{
    "private": true,
    "name": "browser-example",
    "dependencies": {
        "electron": "^1.6.2",
        "monaco-css": "^1.3.1",
        "monaco-editor": "^0.8.3",
        "monaco-editor-core": "^0.8.2",
        "monaco-html": "^1.2.1",
        "monaco-json": "^1.2.2",
        "monaco-languages": "^0.7.0",
        "monaco-typescript": "^2.1.2",
        "reflect-metadata": "^0.1.10",
        "theia": "^0.0.1"
    },
    "scripts": {
        "install:theia": "cd ../ && npm link && cd examples && npm link theia",
        "clean": "./node_modules/.bin/rimraf lib",
        "lint": "./node_modules/.bin/tslint -c ../config/tslint/tslint.json --project ./tsconfig.json",
        "build": "npm run build:app && npm run build:web",
        "build:app": "./node_modules/.bin/tsc && npm run lint",
        "build:web": "./node_modules/.bin/webpack && cp src/web/index.html lib/web",
        "build:electron": "npm run build:app && ./node_modules/.bin/webpack --target electron && cp src/electron/index.html lib/electron",
        "start:app": "./node_modules/.bin/node ./lib/app.js",
        "start:web": "./node_modules/.bin/concurrently \"npm run start:app\" \"./node_modules/.bin/webpack-dev-server --open\"",
        "start:electron": "./node_modules/.bin/electron ./lib/electron/electron-main.js",
        "cold:start:web": "cd ../ && npm run clean && npm run build && cd examples && npm run clean && npm run build:app && npm run build:web && npm run start:web",
        "cold:start:electron": "cd ../ && npm run clean && npm run build && cd examples && npm run clean && npm run build:app && npm run build:electron && npm run start:electron",
        "watch:app": "./node_modules/.bin/tsc --watch",
        "watch:web": "npm run build:web && ./node_modules/.bin/webpack --watch",
        "test:ui": "./node_modules/.bin/wdio wdio.conf.js"
    },
    "devDependencies": {
        "@types/chai": "^3.5.1",
        "chai": "^3.5.0",
        "concurrently": "^3.4.0",
        "rimraf": "^2.6.1",
        "selenium-standalone": "^6.2.0",
        "ts-node": "^3.0.2",
        "tslint": "^4.5.1",
        "tslint-loader": "^3.4.3",
        "typescript": "^2.2.1",
        "wdio-mocha-framework": "^0.5.9",
        "wdio-phantomjs-service": "^0.2.2",
        "wdio-selenium-standalone-service": "0.0.8",
        "wdio-spec-reporter": "^0.1.0",
        "webdriverio": "^4.6.2",
        "webpack": "^2.2.1",
        "webpack-dev-server": "^2.4.1"
    }
}