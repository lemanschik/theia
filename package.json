{
  "name": "theia",
  "version": "0.0.1",
  "description": "Theia - JavaScript IDE Framework",
  "repository": {
    "type": "git",
    "url": "https://github.com/TypeFox/Theia.git"
  },
  "files": [
    "./lib/*.d.ts",
    "./lib/*.js",
    "./typings/**/*.d.ts",
    "./src/**/*.css"
  ],
  "directories": {
    "lib": "lib/"
  },
  "dependencies": {
    "@phosphor/algorithm": "^0.1.1",
    "@phosphor/application": "^0.1.5",
    "@phosphor/domutils": "^0.1.2",
    "@phosphor/messaging": "^0.1.2",
    "@phosphor/signaling": "^0.1.2",
    "@phosphor/virtualdom": "^0.1.1",
    "@phosphor/widgets": "^0.1.7",
    "electron": "^1.6.2",
    "express": "^4.15.2",
    "inversify": "^3.1.0",
    "monaco-editor": "^0.8.3",
    "monaco-editor-core": "^0.8.2",
    "monaco-languageclient": "^0.0.1-alpha.2",
    "reconnecting-websocket": "^3.0.3",
    "reflect-metadata": "^0.1.10",
    "urijs": "^1.18.10",
    "vscode-languageserver": "^3.2.0",
    "vscode-ws-jsonrpc": "^0.0.1-alpha.1",
    "ws": "^2.2.0"
  },
  "devDependencies": {
    "@types/chai": "^3.4.35",
    "@types/chai-as-promised": "0.0.29",
    "@types/electron": "^1.4.33",
    "@types/karma": "^0.13.33",
    "@types/mocha": "^2.2.39",
    "@types/urijs": "^1.15.32",
    "@types/ws": "0.0.38",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "circular-dependency-plugin": "^2.0.0",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.26.2",
    "file-loader": "^0.10.1",
    "karma": "^1.5.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.2",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.2",
    "minimist": "^1.2.0",
    "mocha": "^3.2.0",
    "rimraf": "^2.6.1",
    "source-map-loader": "^0.1.6",
    "style-loader": "^0.13.2",
    "ts-loader": "^2.0.1",
    "ts-node": "^2.1.0",
    "tsc-watch": "^1.0.5",
    "tslint": "^4.5.1",
    "typescript": "^2.2.1",
    "url-loader": "^0.5.8",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.4.1",
    "webpack-merge": "^3.0.0"
  },
  "scripts": {
    "prepublish": "npm run clean && npm run build && npm run test",
    "lint": "./node_modules/.bin/tslint -c ./config/tslint/tslint.json --project ./tsconfig.json",
    "build": "./node_modules/.bin/tsc && npm run lint",
    "watch": "./node_modules/.bin/tsc-watch --onSuccess \"npm run lint\"",
    "clean": "./node_modules/.bin/rimraf lib",
    "clean:node_modules": "./node_modules/.bin/rimraf node_modules",
    "test": "./node_modules/.bin/mocha src/**/*.spec.ts",
    "test:watch": "./node_modules/.bin/mocha --watch src/**/*.spec.ts",
    "clean:vscode-ws-jsonrpc": "./node_modules/.bin/rimraf node_modules/vscode-ws-jsonrpc",
    "update:vscode-ws-jsonrpc": "npm run clean:vscode-ws-jsonrpc && npm install",
    "clean:monaco-languageclient": "./node_modules/.bin/rimraf node_modules/monaco-languageclient && ./node_modules/.bin/rimraf node_modules/vscode-base-languageclient",
    "update:monaco-languageclient": "npm run clean:monaco-languageclient && npm install",
    "clean:file-deps": "npm run clean:monaco-languageclient && npm run clean:vscode-ws-jsonrpc",
    "update:file-deps": "npm run clean:file-deps && npm install"
  },
  "bugs": {
    "url": "https://github.com/TypeFox/Theia/issues"
  },
  "homepage": "https://github.com/TypeFox/Theia"
}
